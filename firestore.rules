rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Products collection - public read, admin write
    match /products/{productId} {
      allow read: if true; // Anyone can view products
      allow write: if isAdmin(); // Only admins can modify products
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Allow anyone to create an order (Guest Checkout)
      allow create: if true;
      
      // Allow customers to read their own orders if they are authenticated
      // or allow admins to read all orders
      allow read: if isAdmin() || (request.auth != null && resource.data.customerEmail == request.auth.token.email);
      
      // Only admins can update or delete orders
      allow update, delete: if isAdmin();
    }
    
    // Admins collection - allow users to read their own doc for login verification
    match /admins/{adminId} {
      allow read: if request.auth != null && (request.auth.uid == adminId || isAdmin());
      allow write: if isAdmin();
    }
  }
}
